    <!-- JavaScript simplificado y funcional -->
    <script>
        // Variables globales
        let menuFabAbierto = false;
        let temaOscuro = false;

        // Funciones básicas de UI
        function mostrarSeccion(sectionId) {
            console.log('Mostrando sección:', sectionId);
            
            // Ocultar todas las secciones
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Mostrar la sección seleccionada
            const seccionSeleccionada = document.getElementById(sectionId);
            if (seccionSeleccionada) {
                seccionSeleccionada.classList.add('active');
            }
            
            // Actualizar pestañas
            document.querySelectorAll('.tab').forEach(tab => {
                tab.classList.remove('active');
            });
            
            // Encontrar y activar la pestaña correspondiente
            const pestanaCorrespondiente = document.querySelector(`[onclick="mostrarSeccion('${sectionId}')"]`);
            if (pestanaCorrespondiente) {
                pestanaCorrespondiente.classList.add('active');
            }
            
            // Scroll suave al top
            window.scrollTo({ top: 0, behavior: 'smooth' });
            
            // Feedback háptico en móvil
            if (navigator.vibrate) {
                navigator.vibrate(50);
            }
        }

        // Funciones del header
        function cambiarTema() {
            console.log('Cambiando tema');
            temaOscuro = !temaOscuro;
            document.documentElement.setAttribute('data-theme', temaOscuro ? 'dark' : 'light');
            localStorage.setItem('temaPreferencia', temaOscuro ? 'dark' : 'light');
            mostrarNotificacion(`Tema ${temaOscuro ? 'oscuro' : 'claro'} activado`, 'info');
        }

        function abrirConfiguracion() {
            console.log('Abriendo configuración');
            mostrarModal('modalConfiguracion');
        }

        function abrirAyuda() {
            console.log('Abriendo ayuda');
            mostrarModal('modalAyuda');
        }

        // Funciones del FAB
        function alternarMenuFab() {
            console.log('Alternando menú FAB');
            menuFabAbierto = !menuFabAbierto;
            
            const menuFab = document.getElementById('menuFab');
            const iconoFab = document.getElementById('iconoFab');
            
            if (menuFab && iconoFab) {
                menuFab.classList.toggle('active', menuFabAbierto);
                iconoFab.textContent = menuFabAbierto ? '✕' : '⚡';
                
                if (navigator.vibrate) {
                    navigator.vibrate(30);
                }
            }
        }

        function guardarFormulario() {
            console.log('Guardando formulario');
            
            try {
                const datos = {};
                document.querySelectorAll('input, select, textarea').forEach(elemento => {
                    if (elemento.name) {
                        datos[elemento.name] = elemento.value;
                    }
                });

                localStorage.setItem('expedienteData', JSON.stringify(datos));
                localStorage.setItem('expedienteTimestamp', new Date().toISOString());
                
                mostrarNotificacion('Expediente guardado correctamente', 'success');
                
                if (navigator.vibrate) {
                    navigator.vibrate([50, 30, 50]);
                }
                
                alternarMenuFab();
            } catch (error) {
                console.error('Error guardando:', error);
                mostrarNotificacion('Error al guardar: ' + error.message, 'error');
            }
        }

        function generarPDF() {
            console.log('Generando PDF');
            
            mostrarPantallaCarga();
            mostrarNotificacion('Preparando PDF...', 'info');
            
            setTimeout(() => {
                ocultarPantallaCarga();
                
                const nombrePaciente = obtenerNombrePaciente();
                const timestamp = new Date().toISOString().split('T')[0];
                const nombreArchivo = `expediente_${nombrePaciente || 'paciente'}_${timestamp}.pdf`;
                
                mostrarNotificacion(`PDF "${nombreArchivo}" preparado - presione OK para vista de impresión`, 'success');
                
                setTimeout(() => {
                    if (confirm('¿Desea abrir la vista de impresión del navegador?')) {
                        window.print();
                    }
                }, 2000);
            }, 1500);
            
            alternarMenuFab();
        }

        function compartirFormulario() {
            console.log('Compartiendo formulario');
            
            const nombrePaciente = obtenerNombrePaciente();
            
            if (navigator.share) {
                navigator.share({
                    title: '🏥 Expediente Clínico Oftalmológico',
                    text: `Expediente clínico de ${nombrePaciente || 'paciente'} - Sistema Avanzado`,
                    url: window.location.href
                }).then(() => {
                    mostrarNotificacion('Compartido exitosamente', 'success');
                }).catch((error) => {
                    if (error.name !== 'AbortError') {
                        compartirFallback();
                    }
                });
            } else {
                compartirFallback();
            }
            
            alternarMenuFab();
        }

        function compartirFallback() {
            navigator.clipboard.writeText(window.location.href).then(() => {
                mostrarNotificacion('Enlace copiado al portapapeles para compartir', 'success');
            }).catch(() => {
                mostrarNotificacion('Use el menú de su navegador para compartir esta página', 'info');
            });
        }

        function imprimirFormulario() {
            console.log('Imprimiendo formulario');
            
            mostrarNotificacion('Abriendo vista de impresión...', 'info');
            
            setTimeout(() => {
                window.print();
            }, 800);
            
            alternarMenuFab();
        }

        function mostrarEstadisticas() {
            console.log('Mostrando estadísticas');
            
            const totalCampos = document.querySelectorAll('input, select, textarea').length;
            const camposLlenos = Array.from(document.querySelectorAll('input, select, textarea'))
                .filter(campo => campo.value && campo.value.trim() !== '').length;
            const porcentajeCompletitud = totalCampos > 0 ? ((camposLlenos / totalCampos) * 100).toFixed(1) : 0;
            
            const mensaje = `📊 Estadísticas del Expediente:\n\n` +
                          `Campos completados: ${camposLlenos}/${totalCampos}\n` +
                          `Progreso: ${porcentajeCompletitud}%\n` +
                          `Última actualización: ${new Date().toLocaleString()}`;
            
            alert(mensaje);
            alternarMenuFab();
        }

        // Funciones de modal
        function mostrarModal(modalId) {
            const modal = document.getElementById(modalId);
            if (modal) {
                modal.classList.add('show');
            }
        }

        function cerrarModal(modalId) {
            const modal = document.getElementById(modalId);
            if (modal) {
                modal.classList.remove('show');
            }
        }

        function guardarConfiguracion() {
            const autoGuardado = document.getElementById('autoGuardado').value;
            const nivelValidacion = document.getElementById('nivelValidacion').value;
            
            localStorage.setItem('expedienteConfiguracion', JSON.stringify({
                autoGuardado,
                nivelValidacion
            }));
            
            mostrarNotificacion('Configuración guardada', 'success');
            cerrarModal('modalConfiguracion');
        }

        // Funciones de utilidad
        function calcularEdad() {
            const fechaNacimiento = new Date(document.getElementById('fecha_nacimiento').value);
            const hoy = new Date();
            
            let edad = hoy.getFullYear() - fechaNacimiento.getFullYear();
            const diferenciaMes = hoy.getMonth() - fechaNacimiento.getMonth();
            
            if (diferenciaMes < 0 || (diferenciaMes === 0 && hoy.getDate() < fechaNacimiento.getDate())) {
                edad--;
            }
            
            if (edad >= 0 && edad <= 120) {
                document.getElementById('edad').value = edad;
                mostrarNotificacion(`Edad calculada: ${edad} años`, 'success');
            }
        }

        function calcularIMC() {
            const peso = parseFloat(document.getElementById('peso').value);
            const talla = parseFloat(document.getElementById('talla').value);
            
            if (peso && talla) {
                const tallam = talla / 100;
                const imc = peso / (tallam * tallam);
                
                let categoria = '';
                if (imc < 18.5) categoria = 'Bajo peso';
                else if (imc < 25) categoria = 'Normal';
                else if (imc < 30) categoria = 'Sobrepeso';
                else categoria = 'Obesidad';
                
                const calculadoraIMC = document.getElementById('calculadoraIMC');
                const resultadoIMC = document.getElementById('resultadoIMC');
                
                if (calculadoraIMC && resultadoIMC) {
                    resultadoIMC.innerHTML = `
                        <strong>IMC: ${imc.toFixed(1)} kg/m²</strong><br>
                        Categoría: ${categoria}
                    `;
                    calculadoraIMC.style.display = 'block';
                }
            }
        }

        function obtenerNombrePaciente() {
            const nombres = document.getElementById('nombres')?.value || '';
            const apellidoP = document.getElementById('apellido_paterno')?.value || '';
            const apellidoM = document.getElementById('apellido_materno')?.value || '';
            return `${nombres} ${apellidoP} ${apellidoM}`.trim().replace(/\s+/g, '_');
        }

        function mostrarDetalleOjo(ojo) {
            alert(`Detalle del ${ojo === 'OD' ? 'Ojo Derecho' : 'Ojo Izquierdo'}\n\nEsta función se expandirá en futuras versiones.`);
        }

        function mostrarPantallaCarga() {
            const pantalla = document.getElementById('pantallaCarga');
            if (pantalla) {
                pantalla.style.display = 'flex';
            }
        }

        function ocultarPantallaCarga() {
            const pantalla = document.getElementById('pantallaCarga');
            if (pantalla) {
                pantalla.style.display = 'none';
            }
        }

        function mostrarNotificacion(mensaje, tipo = 'info') {
            // Eliminar notificaciones existentes
            document.querySelectorAll('.notification').forEach(notif => notif.remove());

            const notificacion = document.createElement('div');
            notificacion.className = `notification ${tipo}`;
            
            const iconos = {
                success: '✅',
                error: '❌',
                warning: '⚠️',
                info: 'ℹ️'
            };

            notificacion.innerHTML = `
                <span>${iconos[tipo] || 'ℹ️'}</span>
                <span>${mensaje}</span>
                <button class="notification-close" onclick="this.parentElement.remove()">✕</button>
            `;

            document.body.appendChild(notificacion);
            
            // Mostrar con animación
            setTimeout(() => notificacion.classList.add('show'), 100);
            
            // Auto-remover después de 5 segundos
            setTimeout(() => {
                if (notificacion.parentElement) {
                    notificacion.classList.remove('show');
                    setTimeout(() => notificacion.remove(), 300);
                }
            }, 5000);
        }

        // Cargar datos guardados
        function cargarDatosGuardados() {
            try {
                const datosGuardados = localStorage.getItem('expedienteData');
                if (datosGuardados) {
                    const datos = JSON.parse(datosGuardados);
                    Object.keys(datos).forEach(campo => {
                        const elemento = document.querySelector(`[name="${campo}"]`);
                        if (elemento) {
                            elemento.value = datos[campo];
                        }
                    });
                    
                    const timestamp = localStorage.getItem('expedienteTimestamp');
                    if (timestamp) {
                        const fechaGuardado = new Date(timestamp).toLocaleString();
                        mostrarNotificacion(`Datos cargados desde: ${fechaGuardado}`, 'info');
                    }
                }
            } catch (error) {
                console.error('Error cargando datos:', error);
            }
        }

        // Cargar tema guardado
        function cargarTemaGuardado() {
            const temaGuardado = localStorage.getItem('temaPreferencia');
            if (temaGuardado) {
                temaOscuro = temaGuardado === 'dark';
                document.documentElement.setAttribute('data-theme', temaGuardado);
            }
        }

        // Auto-guardado
        function iniciarAutoGuardado() {
            setInterval(() => {
                try {
                    const datos = {};
                    document.querySelectorAll('input, select, textarea').forEach(elemento => {
                        if (elemento.name) {
                            datos[elemento.name] = elemento.value;
                        }
                    });
                    localStorage.setItem('expedienteAutoSave', JSON.stringify(datos));
                    console.log('Auto-guardado realizado');
                } catch (error) {
                    console.error('Error en auto-guardado:', error);
                }
            }, 60000); // Cada minuto
        }

        // Manejo de eventos de teclado
        document.addEventListener('keydown', function(e) {
            if (e.ctrlKey || e.metaKey) {
                switch(e.key) {
                    case 's':
                        e.preventDefault();
                        guardarFormulario();
                        break;
                    case 'p':
                        e.preventDefault();
                        imprimirFormulario();
                        break;
                }
            }
            if (e.key === 'Escape') {
                // Cerrar todos los modales
                document.querySelectorAll('.modal').forEach(modal => {
                    modal.classList.remove('show');
                });
                // Cerrar menú FAB
                if (menuFabAbierto) {
                    alternarMenuFab();
                }
            }
        });

        // Cerrar modales al hacer click fuera
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('modal')) {
                e.target.classList.remove('show');
            }
        });

        // Inicialización cuando el DOM esté listo
        document.addEventListener('DOMContentLoaded', function() {
            console.log('🚀 Inicializando sistema...');
            
            // Configurar fecha actual por defecto
            const fechaApertura = document.getElementById('fecha_apertura');
            if (fechaApertura && !fechaApertura.value) {
                fechaApertura.value = new Date().toISOString().split('T')[0];
            }
            
            // Cargar configuraciones guardadas
            cargarTemaGuardado();
            cargarDatosGuardados();
            
            // Iniciar auto-guardado
            iniciarAutoGuardado();
            
            // Mensaje de bienvenida
            setTimeout(() => {
                mostrarNotificacion('🎉 Sistema cargado correctamente. ¡Listo para usar!', 'success');
            }, 1000);
            
            console.log('✅ Sistema inicializado correctamente');
        });

        // Función de debug para testing
        function debug() {
            console.log('=== DEBUG INFO ===');
            console.log('FAB menu:', document.getElementById('menuFab'));
            console.log('Menu abierto:', menuFabAbierto);
            console.log('Tema oscuro:', temaOscuro);
            console.log('Total campos:', document.querySelectorAll('input, select, textarea').length);
            console.log('Campos llenos:', Array.from(document.querySelectorAll('input, select, textarea')).filter(f => f.value).length);
            console.log('Sección activa:', document.querySelector('.section.active')?.id);
            console.log('==================');
        }

        // Exponer función de debug globalmente
        window.debug = debug;
        
        console.log('📋 Sistema de Expediente Oftalmológico cargado. Use debug() para información del sistema.');
    </script>
</body>
</html>